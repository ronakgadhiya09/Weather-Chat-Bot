# WeatherBot Environment Variables Template
# Copy this file to .env and fill in your actual values

# Backend API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENWEATHER_API_KEY=your-openweather-api-key-here
GROQ_API_KEY=gsk_your-groq-api-key-here

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000

# Deployment Tokens (for GitHub Actions)
VERCEL_TOKEN=your-vercel-token-here
RAILWAY_TOKEN=your-railway-token-here
RENDER_API_KEY=your-render-api-key-here
RENDER_SERVICE_ID=your-render-service-id-here

# Optional: Database (if using)
DATABASE_URL=postgresql://user:password@localhost:5432/weatherbot

# Optional: Redis (for caching)
REDIS_URL=redis://localhost:6379

# Optional: Monitoring
SENTRY_DSN=your-sentry-dsn-here

# Development Settings
NODE_ENV=development
PYTHON_ENV=development
DEBUG=true 